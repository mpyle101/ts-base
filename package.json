{
    "name": "ts-base",
    "version": "0.0.1",
    "main": "./dist/main.js",
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf ./dist",
        "exec": "node ./dist/main.js",
        "lint": "eslint ./src/**/*.ts",
        "lint:fix": "eslint --fix --quiet ./src/**/*.ts",
        "start": "npm run build && npm run exec",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [],
    "author": "Michael Pyle",
    "license": "MIT",
    "description": "Template node typescript application",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^22.1.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^9.8.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "rootDir": "./src"
    }
}
